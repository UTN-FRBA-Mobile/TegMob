<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context="view.LoggedUserMainFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        <RelativeLayout
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/profileAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/playerName"
                android:scaleType="fitCenter"
                android:src="@drawable/no_avatar" />

            <TextView
                android:id="@+id/playerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@id/profileAvatar"
                android:text="@string/playerName"
                android:textColor="@color/primaryLightColor"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <Button
            android:id="@+id/myProfileButton"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryButtonColor"
            android:text="@string/myProfile"
            />

        <Button
            android:id="@+id/newGameButton"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryButtonColor"
            android:text="@string/newGame"
            />

        <Button
            android:id="@+id/joinGameButton"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryButtonColor"
            android:text="@string/joinGame"
            />

    </LinearLayout>


</FrameLayout>